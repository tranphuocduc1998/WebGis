<!DOCTYPE html>
<html lang="en">

<head>
    <!-- head của Admin -->
    <% include ../shared/head %>
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.6.0/dist/leaflet.css" />
    <script src="https://unpkg.com/leaflet@1.6.0/dist/leaflet.js"></script>
    <title>Trang chi tiết khu vực</title>
</head>

<body id="page-top">
    <!-- header của trang Admin -->
    <% include ../shared/header %>
    <div id="wrapper">
        <!-- navigation của Admin -->
        <% include ../shared/navigation %>

        <div id="content-wrapper">
            <!-- main của trang Admin -->
            <!-- Breadcrumbs-->
            <ol class="breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#">Trang Chi tiết Đường</a>
                </li>
            </ol>

            <div class="p-3">
                <ul class="nav nav-tabs">
                    <li class="nav-item">
                        <a href="" data-target="#profile" data-toggle="tab" class="nav-link active">Thông tin khu
                            vực</a>
                    </li>
                    <li class="nav-item">
                        <a href="" data-target="#edit" data-toggle="tab" class="nav-link">Chỉnh Sửa thông tin</a>
                    </li>
                </ul>
                <div class="tab-content py-4">
                    <div class="tab-pane active" id="profile">
                        <div class="row">
                            <div class="col-md-12">
                                <h5 class="mb-3">Mã đường: </h5>
                                <p id='lineGid'><%=line.gid%></p>
                                <h5 class="mb-3">Tên đường: </h5>
                                <p><%=line.tenduong%></p>
                                <h5 class="mb-3">Tọa độ (geometry):</h5>
                                <div class="col-md-12" style="height: 500px;">
                                    <div id="map"
                                        style="height: 100%; width: auto; left: 0; top: 0; right: 0; bottom: 0;">

                                    </div>
                                </div>
                            </div>
                        </div>
                        <!--/row-->
                    </div>
                    <div class="tab-pane" id="edit">
                        <form action="" role=" form" method="POST">
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Mã đường:</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" name="gid" value="<%=line.gid%>" readonly>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label">Tên đường:</label>
                                <div class="col-lg-9">
                                    <input class="form-control" type="text" name="tenduong"
                                        value="<%=line.tenduong%>">
                                </div>
                            </div>

                            <div class="form-group row">
                                <label class="col-lg-3 col-form-label form-control-label"></label>
                                <div class="col-lg-9">
                                    <input type="reset" class="btn btn-secondary" value="Thoát">
                                    <input type="submit" class="btn btn-primary" value="Lưu">
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <!-- footer của admin -->
        <% include ../shared/footer %>
    </div>

    <!-- Javascript -->
    <% include ../shared/javascripts %>
    <script type="text/javascript" src="https://unpkg.com/axios/dist/axios.min.js"></script>
    <script>
        var lineGid = document.getElementById('lineGid');
        var map = L.map('map').setView([10.980374983604175, 106.6554205197723], 12);
        L.tileLayer('https://api.maptiler.com/maps/streets/256/{z}/{x}/{y}.png?key=xmOd1dPIjOuHfYuGhLCI', {
            attribution: '<a href="https://www.maptiler.com/copyright/" target="_blank">&copy; MapTiler</a>' +
                '<a href="https://www.openstreetmap.org/copyright" target="_blank">&copy; OpenStreetMap contributors</a>',
        }).addTo(map);

        var loadGeoJSON = function (params) {
            return L.geoJSON(params, {
                style: function (feature) {
                    switch (feature.geometry.type) {
                        case 'MultiLineString':
                            return { color: "#ff0000" };
                        case 'MultiPolygon':
                            return { color: "#ff0000" };
                        default:
                            break;
                    }
                },
            }).bindPopup(function (layer) {
                console.log(layer.feature.geometry.type)
                switch (layer.feature.geometry.type) {
                    case 'MultiLineString':
                        return layer.feature.properties.tenduong;
                    case 'MultiPolygon':
                        return layer.feature.properties.tenphuong;
                    default:
                        break;
                }
            }).addTo(map);
        };

        axios.get('/api/line/' + lineGid.innerText).then(doc => {
            loadGeoJSON(doc.data);
        });
    </script>
</body>

</html>